{
	"build": {
		"beforeDevCommand": "bun run dev",
		"beforeBuildCommand": "bun run build",
		"devPath": "http://localhost:1420",
		"distDir": "../build"
	},
	"package": {
		"productName": "spbnotes",
		"version": "0.1.0"
	},
	"tauri": {
		"systemTray": {
			"iconPath": "icons/32x32.png",
			"iconAsTemplate": true
		},
		"allowlist": {
			"globalShortcut": {
				"all": true
			},
			"all": false,
			"dialog": {
				"all": false,
				"open": true
			},
			"shell": {
				"all": false,
				"open": true
			},
			"path": {
				"all": true
			},
			"window": {
				"show": true,
				"setFocus": true,
				"center": true,
				"setAlwaysOnTop": true
			}
		},
		"windows": [
			{
				"title": "SPBNotes",
				"width": 500,
				"height": 600,
				"focus": true,
				"visible": false
			}
		],
		"security": {
			"csp": null
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.spbnotes.app",
			"icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
		}
	}
}
